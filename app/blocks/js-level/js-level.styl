.js-level
	display block

	&__js-slider
		position relative
		margin-top 40px
		padding-bottom 100px
		display block
		height 5px

		background-image url('../images/line.png')
		background-repeat no-repeat
		background-position-y -27px
		background-size 100%

		& .noUi-marker
			position absolute
			top 1px
			width 3px
			height 26px

			background-image url('../images/common-pip.png')
			background-repeat no-repeat
			background-position -8px 0

			&.firstPipNode
				background-image url('../images/first-pip.png')
				background-position -1px 0

			&.lastPipNode
				background-image url('../images/last-pip.png')
				background-position -8px 0
				transform translateX(-2px)

		& .noUi-value
			position absolute
			margin-top 30px
			max-width 200px

			font-family $font-family-primary
			font-size 13px
			font-weight 700
			line-height 1.5
			color $font-color-primary

			&:last-child
				transform translateX(-100%)
				white-space nowrap

		& .noUi-origin
			position absolute
			top -20px
			transform translateX(-50%)

		& .noUi-handle
			position relative
			background-image url('../images/triangle.png')
			background-repeat no-repeat
			size 18px 16px

@media (max-device-width: 768px)
	.js-level
		margin-bottom 40px
		padding-left 15px

		&__js-slider
			margin-top 15px
			padding-left 15px
			padding-bottom 0
			height 200px

			background-image url('../images/line-vertical.png')
			background-position-x -12px
			background-position-y 0
			background-size 10%

			& .noUi-marker
				left 1px
				width 26px
				height 3px

				background-image url('../images/common-pip-mobile.png')
				background-position 0 -8px

				&.firstPipNode
					background-image url('../images/first-pip-mobile.png')

				&.lastPipNode
					background-image url('../images/last-pip-mobile.png')
					background-position 0 -12px

			& .noUi-value
				left 40px
				margin-top 0
				max-width auto
				transform translateY(-50%)

				&:last-child
					transform translateY(-50%)

			& .noUi-origin
				position absolute
				left -15px
				transform translateY(-50%)

			& .noUi-handle
				transform rotate(-90deg)
